#include <bits/stdc++.h>
using namespace std;
int solve(const string & in)
{
    string  s="$";
    for(int i=0;i<in.size();i++)
    {
        s.push_back('#');
        s.push_back(in[i]);   
    }
    s.push_back('#');
    int mx=0,id=0,ans=1;
    int *len=new int[s.size()+1];
    for(int i=0;i<s.size();i++)
    {
        if(mx>i) len[i]=min(len[id*2-i],mx-i);
        else len[i]=1;
        while(s[i-len[i]]==s[i+len[i]]) len[i]++;
        if(i+len[i]>mx) mx=i+len[i],id=i;
        ans=max(ans,len[i]);
    }
    delete []len;
    return ans-1;
}
int main()
{
    ios_base::sync_with_stdio(false); cin.tie(NULL);
    string in;
    while(cin>>in)
    {
        int ans=solve(in);
        cout<<ans<<endl;
    }
    return 0;
}
